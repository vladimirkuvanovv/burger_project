{% extends 'template.twig' %}

{% block body %}
    <form role="form" action="/user/update" method="post" enctype="multipart/form-data" style="max-width: 500px">
        {#{{ csrf }}#}
        {#{{ method = 'put' }}#}
        <input type="hidden" value="{{ user.id }}" name="id" >
        <div class="form-group">
            <label>User name</label>
            <input type="text" class="form-control" name="username" value="{{ user.username }}">
        </div>
        <div class="form-group">
            <label>Age</label>
            <input type="number" class="form-control" name="age" value="{{ user.age }}">
        </div>
        <div class="form-group">
            <label>Details</label>
            <textarea name="details" class="form-control" id="" cols="30" rows="10">{{ user.details }}</textarea>
        </div>
        <button type="submit" class="btn btn-success">Редактировать</button>
    </form>
{% endblock %}